            <TextBox x:Name="TextMinuto" IsHitTestVisible="False" Height="37" Text="Minutos" TextWrapping="Wrap" Width="84" FontSize="20" Canvas.Left="182" Canvas.Top="160" HorizontalAlignment="Left" VerticalAlignment="Center">
